{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/auth/(.*)": "<rootDir>/../libs/auth/src/$1",
    "@app/auth": "<rootDir>/../libs/auth/src",
    "@app/db-lib/(.*)": "<rootDir>/../libs/db-lib/src/$1",
    "@app/db-lib": "<rootDir>/../libs/db-lib/src",
    "@app/orders/(.*)": "<rootDir>/../libs/orders/src/$1",
    "@app/orders": "<rootDir>/../libs/orders/src",
    "@app/orders-lib/(.*)": "<rootDir>/../libs/orders-lib/src/$1",
    "@app/orders-lib": "<rootDir>/../libs/orders-lib/src"
  }
}